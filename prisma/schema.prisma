// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?
  role          String    @default("CUSTOMER") // CUSTOMER, ADMIN, STAFF
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  assignedJobs  Booking[] @relation("AssignedStaff")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Service model for cleaning services
model Service {
  id          String    @id @default(cuid())
  name        String
  description String
  basePrice   Float
  priceUnit   String    @default("per hour") // per hour, per sqft, flat rate
  duration    Int       @default(60) // estimated duration in minutes
  image       String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// Property types for bookings
model PropertyType {
  id          String    @id @default(cuid())
  name        String    @unique // House, Office, Church, Event, Restaurant, etc.
  description String?
  icon        String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

// Booking model
model Booking {
  id                String   @id @default(cuid())
  bookingNumber     String   @unique
  
  // Customer info
  userId            String?
  user              User?    @relation(fields: [userId], references: [id])
  guestName         String?
  guestEmail        String?
  guestPhone        String?
  
  // Service info
  serviceId         String
  service           Service  @relation(fields: [serviceId], references: [id])
  
  // Property info
  propertyTypeId    String
  propertyType      PropertyType @relation(fields: [propertyTypeId], references: [id])
  propertySize      String?  // e.g., "3 bedroom", "2000 sqft"
  
  // Schedule
  scheduledDate     DateTime
  scheduledTime     String   // e.g., "09:00 AM"
  estimatedDuration Int      @default(60) // in minutes
  
  // Location
  address           String
  city              String
  state             String
  zipCode           String?
  
  // Additional details
  specialInstructions String?
  
  // Pricing
  estimatedPrice    Float
  finalPrice        Float?
  
  // Status: PENDING, CONFIRMED, IN_PROGRESS, COMPLETED, CANCELLED
  status            String   @default("PENDING")
  
  // Staff assignment
  assignedStaffId   String?
  assignedStaff     User?    @relation("AssignedStaff", fields: [assignedStaffId], references: [id])
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime  @updatedAt
  completedAt       DateTime?
  
  // Contact preferences
  contactMethod     String   @default("EMAIL") // EMAIL, SMS, WHATSAPP
}
